	<style>
		.shutter-cloth { height: 100%; width: 100%; position: relative; overflow: hidden; }

		.shutter-cloth::before { content: ""; position: absolute; top:
		0%; left: 0; height: 100%; width: 100%; background-image:
		url("images/ccloth.png"); background-size: cover;
		background-position: center center; animation: curtain-open 6s
		reverse forwards; z-index: 1; }

		@keyframes curtain-open { 10% { transform: translateY(-100%); }
		100% { transform: translateY(0); } }

		.custom-background { background-repeat: no-repeat;
		background-size: 100% 100%; background-position: center center;
		background-image: url("images/pgif.gif"); }

	</style>
